<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loganfreeman.gallery" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.loganfreeman.gallery.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.loganfreeman.gallery.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.loganfreeman.gallery.ImageListActivity"></activity>

        <activity android:name="com.loganfreeman.gallery.PickPhotoPreviewActivity"></activity>

        <activity android:name="com.loganfreeman.gallery.UserSettingActivity"></activity>

        <activity android:name=".ImageSelectActivity"></activity>

        <activity android:name=".LocalPhotoPreviewActivity"></activity>

        <activity android:name=".VideoSelectActivity"></activity>

        <activity android:name=".LocalVideoPreviewActivity"></activity>
    </application>

</manifest>
